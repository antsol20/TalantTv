<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag3">


    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:checkedButton="@id/rBkitchen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rBkitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tag="kitchen"
            android:text="Kitchen"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rBlivingroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tag="living"
            android:text="Living Room"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rBbedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tag="bedroom"
            android:text="Bedroom"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rBloft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tag="loft"
            android:text="Loft"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/virginB"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:padding="20dp"
        android:tag="virgin"
        android:text="Virgin"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RG"


        />

    <Button
        android:id="@+id/freeviewB"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:tag="freeview"
        android:text="Freeview"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/virginB"
        app:layout_constraintTop_toBottomOf="@id/RG"


        />

    <Button
        android:id="@+id/rokuB"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:tag="roku"
        android:text="Roku"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/virginB"
        app:layout_constraintTop_toBottomOf="@id/virginB"


        />

    <Button
        android:id="@+id/macB"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:tag="mac"
        android:text="Mac"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/freeviewB"
        app:layout_constraintTop_toBottomOf="@id/virginB"


        />

</androidx.constraintlayout.widget.ConstraintLayout>